.container{
    display: flex;
    flex-direction:column;
    align-items: center;
    justify-content: space-around;
    background-color:#13d4db;
    height: 60%;
}

image{
    width:200rpx;
    height:200rpx;
    border-radius: 50%;
}

.container>text{
    font-size:32rpx;
    font-weight: bold;
}

.journey-container{
    border: 1px solid #405f80;
    width: 200rpx;
    height: 80rpx;
    border-radius: 5px;
    text-align:center;
}

.journey{
    font-size:22rpx;
    font-weight: bold;
    line-height:80rpx;
    color: #405f80;
}

page{
    height: 100%;
    background-color:#b3d4db;
}